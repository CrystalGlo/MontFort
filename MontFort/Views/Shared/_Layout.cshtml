<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Résidence Montfort</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="min-height:100%; height:100%;">
    <div class="navbar navbar-fixed-top navbar-light" style="position: relative; top:-50px; border-bottom-color:blue;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="background-color:cornflowerblue;">
                    <span class="icon-bar" style="background-color:white;"></span>
                    <span class="icon-bar" style="background-color:white;"></span>
                    <span class="icon-bar" style="background-color:white;"></span>
                </button>
                <img id="app_icon" src="~/Content/Images/montfort_icon.png" style="height:70px" />
            </div>

            <div class="navbar-collapse collapse" style="border-top-color:blue;">
                <ul class="nav navbar-nav">
                    <li id="homeLink">@Html.ActionLink("Accueil", "Index", "Home", null, new { @style = "font-size:18px;" })</li>
                    <li id="residentLink">@Html.ActionLink("Résidents", "Index", "Residents", null, new  { @style = "font-size:18px;" })</li> 
                    <li id="roomLink">@Html.ActionLink("Chambres", "Index", "Rooms", null, new  { @style = "font-size:18px;" })</li> 

                    <li id="aboutLink">@Html.ActionLink("À propos de", "About", "Home", null, new { @style = "font-size:18px;" })</li>
                    <li id="contactLink">@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "font-size:18px;" })</li>
                </ul>
                @Html.Partial("_LoginPartial")

                @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Recherche..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
                </form>*@

            </div>
        </div>
    </div>
    <div class="container body-content" style="position: relative; top: -50px;">
        @RenderBody()
        <hr />
        <footer>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
